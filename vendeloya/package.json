{
  "name": "vendeloya",
  "version": "1.0.0",
  "description": "E-commerce microservices architecture with Node.js, TypeScript and Firebase",
  "private": true,
  "workspaces": [
    "api-gateway",
    "components/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:all": "./scripts/build-all.sh",
    "init": "node scripts/setup-database.js",
    "start": "firebase emulators:start",
    "start:full": "node scripts/setup-database.js && npm start",
    "test": "npm run test --workspaces",
    "lint": "eslint . --ext .ts",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

